{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "CommonJS",
        "noEmitOnError": true,
        "strict": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/back/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}